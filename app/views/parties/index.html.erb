<div class="container">
    <div class="row">
    	<h1><strong>パーティー一覧</strong></h1>
    	<div class="col-xs-4">
    		<h3>[検索]</h3>
    	</div>
    	<div class="col-xs-8">
    		<% @parties.each do |party| %>
    			<div class="party-box">
    				<div class="row">
    					<div class="col-xs-4">
							<%= attachment_image_tag party.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
						</div>
						<div class="col-xs-8">
							<% if party.user.is_gender == true %>
								<p>性別　　　　　女性</p>
							<% else %>
								<p>性別　　　　　男性</p>
							<% end %>
							<p>場所　　　　　<%= party.place %></p>
							<p>年齢　　　　　<%= party.age %></p>
							<p>参加人数　　　<%= party.people_count %></p>
							<p>詳細文　　　　<%= party.introduction %></p>
							<%= link_to "パーティ詳細を見る",party_path(party.id) %>
						</div>
					</div>
    			</div>
    		<% end %>
    	</div>
    </div>
</div>